<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paternbook"
    tools:context=".UploadActivityPres">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/backicon"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/titletipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Sertifikat"
            android:textSize="30sp"
            android:fontFamily="@font/pb"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/btnpres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/prestasi"/>

    <ImageView
        android:id="@+id/btnpeng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="207dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/pengalaman"/>

    <ImageView
        android:id="@+id/btnorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="277dp"
        android:src="@drawable/organisasi"/>

    <ImageView
        android:id="@+id/btnpel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="207dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/pelatihan"/>

</RelativeLayout>